@model List<Category>

<h1>Category list</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @category.Id
                </td>

                <td>
                    @category.Name
                </td>
                
                <td>
                    @category.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>